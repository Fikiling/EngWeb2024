extends layout

block content
    // Fundo e navbar
    include componentes/navbar
    div.um-fundo

    // Header
    .w3-card-4
        header.w3-container.w3-white.header-flex
            h1.header-title.regular= title
            img.header-logo(src="/imagens/umLogo.png" alt="Uminho logo")

    div.caixa-destaques.bmargin20
        div.w3-white.destaque-seccao.arredondado
            h1.regular.destaque-titulo Trending
            each item in trending
                div.destaque
                    p
                        b Descrição: 
                        | #{item.descricao}
                    p
                        b Data de Registro: 
                        | #{item.dataRegisto}
                    p 
                        b Comentários: 
                        | #{item.comentarios.length}
                    p
                        b Likes: 
                        | #{item.likes.join(', ')}
                    p 
                        b Numero de Likes: 
                        | #{item.likesCount}
                        
                    div.centrado
                        a.w3-button.w3-green.w3-round-large.tmargin15.rmargin20(href="/recursos/"+item.recurso) Abrir recurso
                        a.w3-button.w3-green.w3-round-large.tmargin15(href="/posts/"+item._id) Abrir Post

        div.w3-white.destaque-seccao.arredondado
            h1.regular.destaque-titulo Posts recentes
            each item in recent
                div.destaque
                    h3 Novo post em: #{item.dataRegisto}
                    p
                        b Descrição: 
                        | #{item.descricao}
                    p
                        b Comentários: 
                        | #{item.comentarios.length}
                    p
                        b Likes: 
                        | #{item.likes.join(', ')}

                    div.centrado
                        a.w3-button.w3-green.w3-round-large.tmargin15.rmargin20(href="/recursos/"+item.recurso) Abrir recurso
                        a.w3-button.w3-green.w3-round-large.tmargin15(href="/posts/"+item._id) Abrir Post

        div.w3-white.destaque-seccao.arredondado
            h1.regular.destaque-titulo Melhores recursos
            each item in best
                div.destaque
                    h3 #{item.titulo}
                    p 
                        b Tipo: 
                        | #{item.tipo}
                    p 
                        b Subtítulo: 
                        | #{item.subtitulo}
                    p 
                        b Data de Criação: 
                        | #{item.dataCriacao}
                    p 
                        b Autor: 
                        | #{item.autor}
                    p 
                        b Ficheiros: 
                        | #{item.ficheiro.join(', ')}
                    p 
                        b Avaliação Média: 
                        | #{item.avgRating}
                    
                    div.centrado
                        a.w3-button.w3-green.w3-round-large.tmargin15(href="/recursos/"+item._id) Abrir recurso
                        

    // Footer
    include componentes/rodape