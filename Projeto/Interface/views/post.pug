extends layout

block content
    // Fundo e navbar
    include componentes/navbar
    div.um-fundo

    // Header
    .w3-card-4
        header.w3-container.w3-white.header-flex
            h1.header-title.regular Plataforma de Gestão e Disponibilização de Recursos Educativos
            img.header-logo(src="/imagens/umLogo.png" alt="Uminho logo")
            
    // Conteudo da pagina
    div.conteudo 
        // Caixa 
        div.w3-white.caixanormal.arredondado
            .w3-container.regular
                h1.regular Visualizar post
                fieldset
                    legend.regular= title

                    p.regular
                        strong Descricao: 
                        |  #{item.descricao}

                    p.regular
                        strong Data de Registo:
                        |  #{item.dataRegisto}

                    p.regular
                        strong Likes:
                        |  #{item.likes.length}

                    .w3-container.tmargin15
                        table.w3-table-all
                            tr
                                th Autor
                                th Comentario
                                th Data
                            each c in item.comentarios
                                tr
                                    td=c.autor
                                    td=c.conteudo
                                    td=c.data
                div.tmargin15
                    a.w3-button.w3-blue.rmargin15(href="/recursos/"+item.recurso) Visualizar Recurso
                    
                    if(deilike)
                        a.w3-button.w3-blue.rmargin15(href="/posts/like/"+item._id) Dislike
                    else 
                        a.w3-button.w3-blue.rmargin15(href="/posts/like/"+item._id) Like

                    a.w3-button.w3-blue.rmargin15(href="/posts/comentario/escrever/"+item._id) Comentar
                    a.w3-button.w3-blue.rmargin15(href="/posts") Regressar

    // Footer
    include componentes/rodape