extends layout

block content
    // Fundo e navbar
    include componentes/navbar
    div.um-fundo
    
    // Header
    .w3-card-4
        header.w3-container.w3-white.header-flex
            h1.header-title.regular Plataforma de Gestão e Disponibilização de Recursos Educativos
            img.header-logo(src="/imagens/umLogo.png" alt="Uminho logo")

    // Conteudo da pagina
    div.conteudo 
        // Caixa 
        div.w3-white.caixanormal.arredondado
            form.w3-container(action='/posts/add', method='POST')
                h1.regular Adicionar post
                label Descrição
                input.w3-input(type="text" name="descricao")

                div.coluna
                    div
                        label.rmargin15 Recurso
                        select.tmargin15(name="recurso" id="recurso")
                            each item in recursos
                                if(item.autor == utilizador && item.visibilidade == "publico")
                                    option(value=item._id) #{item.titulo}
                    
                    div
                        if(failvazio)
                            p(style='color:red') Preencher todos os campos!
                        
                        if(failrecurso)
                            p(style='color:red') Recurso não existe!
                        
                        button.w3-btn.w3-green.w3-mb-2.tmargin20.rmargin15(type='submit') Adicionar post
                        a.w3-button.w3-black.tmargin20(href="/posts") Regressar
        
    // Footer
    include componentes/rodape


