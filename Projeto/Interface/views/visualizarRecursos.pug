extends layout

block content
    // Fundo e navbar
    include componentes/navbar
    div.um-fundo
    
     // Header
    .w3-card-4
        header.w3-container.w3-white.header-flex
            h1.header-title.regular Plataforma de Gestão e Disponibilização de Recursos Educativos
            img.header-logo(src="/imagens/umLogo.png" alt="Uminho logo")

    // Conteudo da pagina
    div.conteudo 
        // Caixa 
        div.w3-white.caixanormalgorda.arredondado
            .w3-container
                div.flexivel
                    h1.regular Visualizar Recursos
                    
                    div.mlauto
                        a.w3-button.w3-black.mlauto.retangulo.fontegrande.rmargin15(href="/recursos/add") Criar recurso
                        a.w3-button.w3-black.quadrado.fontegrande(href="/") <

                table.w3-table-all
                    tr
                        th Identificador
                        th Tipo
                        th Titulo
                        th Subtitulo
                        th Data de Criacao
                        th Data de Registo
                        th Acesso
                        th Autor

                    each item in lista
                        if(item.visibilidade=="publico" || item.visibilidade=="privado" && (acesso=="admin" || item.autor==utilizador))
                            tr
                                td
                                    a(href="/recursos/"+item._id) #{item._id}
                                td=item.tipo
                                td=item.titulo
                                td=item.subtitulo
                                td=item.dataCriacao
                                td=item.dataRegisto
                                td=item.visibilidade
                                td=item.autor
    // Footer
    include componentes/rodape