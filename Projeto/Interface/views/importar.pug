extends layout

block content
    // Fundo e navbar
    include componentes/navbar
    div.um-fundo
    
    // Header
    .w3-card-4
        header.w3-container.w3-white.header-flex
            h1.header-title.regular Plataforma de Gestão e Disponibilização de Recursos Educativos
            img.header-logo(src="/imagens/umLogo.png" alt="Uminho logo")

    // Conteudo da pagina
    div.conteudo 
        // Caixa 
        div.w3-white.caixanormal.arredondado
            form.w3-container(action='/importar', method='post', enctype='multipart/form-data')
                h1.regular Importar Ficheiro
                fieldset
                    div.caixabloco
                        label.rmargin15 Ficheiros
                        input(type='file', name='zip',accept=".zip",required)

                button.w3-btn.w3-green.w3-mb-2.tmargin15.rmargin15(type='submit') Upload
                a.w3-button.w3-black.tmargin15(href="/") Regressar
        
    // Footer
    include componentes/rodape