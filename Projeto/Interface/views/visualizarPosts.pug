extends layout

block content
    // Fundo e navbar
    div
        include componentes/navbar
        div.um-fundo
        
        // Header
        .w3-card-4
            header.w3-container.w3-white.header-flex
                h1.header-title.regular Plataforma de Gestão e Disponibilização de Recursos Educativos
                img.header-logo(src="/imagens/umLogo.png" alt="Uminho logo")
        
        // Conteudo da pagina
        div.conteudo.bmargin20
            // Caixa 
            div.w3-white.caixanormalgorda.arredondado
                .w3-container
                    div.flexivel
                        h1.regular Visualizar Posts
                        div.mlauto
                            a.w3-button.w3-black.retangulo.fontegrande.rmargin15(href="/posts/add") Criar post
                            a.w3-button.w3-black.quadrado.fontegrande(href="/") <
                            
                    div.flexivel.wrap
                        each item in lista
                            div.caixafixe.postsize.w3-panel.w3-pale-green.w3-bottombar.w3-border-green.w3-border.rmargin15.bmargin15
                                    .w3-container
                                        h3=item.descricao
                        
                                        h5 Likes: #{item.likes.length}
                                        h5 Data de Registo: #{item.dataRegisto}
                                        a.w3-button.w3-green.w3-round-large(href="/posts/"+item._id) Abrir post
  
    // Footer
    include componentes/rodape