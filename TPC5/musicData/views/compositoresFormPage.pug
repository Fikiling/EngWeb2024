extends layout 

block content
    .w3-card-4
        header.header  
            h2 Compositor Form

        form.w3-container(method="POST") 
            fieldset 
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id"  required) 
                label Nome
                input.w3-input.w3-round(type="text" name="nome" required) 
                label Data de Nascimento
                input.w3-input.w3-round(type="date" name="dataNasc" required) 
                label Data de Óbito
                input.w3-input.w3-round(type="date" name="dataObito" required)
                label Período
                input.w3-input.w3-round(type="text" name="periodo" required)
                label Bio
                textarea.w3-input.w3-round(name="bio" rows="5" required) 
            
            br 
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Registar
        
        footer.footer  
            adress 
                span Generated by a100696::EngWeb2024 in #{date} - [
                a(href="/") Voltar
                span ]