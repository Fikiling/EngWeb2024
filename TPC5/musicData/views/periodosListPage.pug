extends layout

block content
    .w3-card-4 
        header.w3-container.w3-amber
            h1 
                span.w3-amber Lista de Periodos 
                a.w3-btn.w3-round.w3-khaki.btn-add(href='/periodos/registo') Adicionar elemento 

        
        .w3-container
            table.w3-table-all
                tr  
                    th.w3-blue Id
                    th.w3-blue Designação
                    th.w3-blue Ações 
                
                each periodo in periodos
                    tr
                        td.w3-blue-gray= periodo.id
                        td.w3-indigo
                            a(href='/periodos/' + periodo.id)= periodo.Designacao
                        td.w3-deep-orange 
                            span [
                            a(href='/periodos/edit/' + periodo.id) Edit
                            span ]
                            span [
                            a(href='/periodos/delete/' + periodo.id) Delete
                            span ]

        footer.w3-container.w3-deep-orange 
            h5 Generated by a100696::EngWeb2024 in #{data}
    