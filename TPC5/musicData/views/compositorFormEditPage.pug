extends layout 

block content   
    .w3-card-4 
        header.w3-container.w3-orange 
            h2 Compositor Form
            
            form.w3-container(method="POST")
                fieldset
                    legend Metadata
                    label ID
                    input.w3-input.w3-round(type="text" name="id"  value=compositor.id readonly)
                    label Nome
                    input.w3-input.w3-round(type="text" name="nome" required value=compositor.nome)
                    label Bio
                    textarea.w3-input.w3-round(name="bio" rows="5" required value=compositor.bio)
                    label Data de Nascimento
                    input.w3-input.w3-round(type="date" name="dataNasc" required value=compositor.dataNasc)
                    label Date de Óbito
                    input.w3-input.w3-round(type="date" name="dataObito" required value=compositor.dataObito)
                    label Período
                    input.w3-input.w3-round(type="text" name="periodo" required value=compositor.periodo)

                br
                button.w3-btn.w3-amber.w3-mb-2(type="submit") Salvar
            
            footer.w3-container.w3-orange 
            adress 
                span Generated by a100696::EngWeb2024 in #{date} - [
                a(href="/") Voltar
                span ]
                