extends layout

block content
    .w3-card-4 
        header.w3-container.w3-amber
            h1 
                span.w3-amber Lista de Compositores  
                a.w3-btn.w3-round.w3-khaki.btn-add(href='/compositores/registo') Adicionar elemento 

        
        .w3-container
            table.w3-table-all
                tr  
                    th.w3-blue Id
                    th.w3-blue Nome
                    th.w3-blue Bio
                    th.w3-blue Data de Nascimento
                    th.w3-blue Data de Morte
                    th.w3-blue Período 
                    th.w3-blue Ações 
                
                each compositor in compositores
                    tr
                        td.w3-blue-gray= compositor.id
                        td.w3-indigo
                            a(href='/compositores/' + compositor.id)= compositor.nome
                        td.w3-pale-blue.bio= compositor.bio
                        td.w3-pale-red= compositor.dataNasc
                        td.w3-pale-red= compositor.dataObito
                        td.w3-lime= compositor.periodo
                        td.w3-deep-orange 
                            span [
                            a(href='/compositores/edit/' + compositor.id) Edit
                            span ]
                            span [
                            a(href='/compositores/delete/' + compositor.id) Delete
                            span ]

        footer.w3-container.w3-deep-orange 
            h5 Generated by a100696::EngWeb2024 in #{data}
    