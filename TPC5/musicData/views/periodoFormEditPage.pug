extends layout 

block content   
    .w3-card-4 
        header.w3-container.w3-orange 
            h2 Período Form
            
            form.w3-container(method="POST")
                fieldset
                    legend Metadata
                    label ID
                    input.w3-input.w3-round(type="text" name="id"  value=periodo.id readonly)
                    label Designação
                    input.w3-input.w3-round(type="text" name="Designacao" required value=periodo.Designacao)

                br
                button.w3-btn.w3-amber.w3-mb-2(type="submit") Salvar
            
            footer.w3-container.w3-orange 
            adress 
                span Generated by a100696::EngWeb2024 in #{date} - [
                a(href="/periodos") Voltar
                span ]
                